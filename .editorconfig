# @see http://editorconfig.org/

root = true

[*]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[{Gemfile*,Rakefile}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2
