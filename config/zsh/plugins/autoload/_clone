#compdef clone

_clone() {
  local curcontext="$curcontext" state line
  typeset -A opt_args
  declare -a args

  _arguments -C \
    '-d[Drupal Project.]' \
    '-s[Shallow Clone.]' \
    '-p[Print Path.]' \
    '1: :->repo' \
    && ret=0

  if [[ $state == "repo" ]]; then
   # Handle repo
  fi
}

_clone $@
