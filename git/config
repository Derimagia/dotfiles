[core]
	autocrlf = input
	pager = diff-so-fancy | less -RFX
[alias]
	# Shortcuts
	aa = add -A
	br = branch
	co = checkout
	ci = commit
	cl = clone
	cp = cherry-pick
	rl = reflog
	r = reset
	rh = reset --hard
	st = status -sb

	# Diff shortcuts
	df = diff --color-words
	dlc = diff --cached HEAD^
	dc = diff --cached
	dr  = "!f() { git diff "$1"^.."$1"; }; f"

	# Graphs/Charts
	lg = log --graph --topo-order --abbrev-commit --date=short --decorate --all --boundary --pretty=format:'%Cgreen%ar %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset'
	ls = log --oneline

	# grep
	f = "!git ls-files | grep -i"
	gg = grep --break --heading --line-number

	# merging
	ours = "!f() { git checkout --ours $@ && git add $@; }; f"
	theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
[color]
	# diff = auto - currently broken by diff-so-fancy
	ui = true
[color "branch"]
	local = yellow
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	untracked = cyan
[diff]
	indentHeuristic = true
	tool = Kaleidoscope
[difftool]
	prompt = false
[ghq]
	user = "derimagia"
	root = ~/src
	root = ~/go/src
[interactive]
	diffFilter = diff-so-fancy --patch-mode | less -RFX
[merge]
	prompt = false
	conflictstyle = diff3
	tool = Kaleidoscope
[mergetool]
	prompt = false
	keepBackup = false
# Sourcetree REALLYwants this set.
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[pager]
	show = diff-so-fancy | less --tabs=4 -RFX
	log = diff-so-fancy | less --tabs=4 -RFX
[pull]
	rebase = true
[push]
	default = current
[rebase]
	autoStash = true
[rerere]
	enabled = 1
# rewrites of repo paths
[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "git://github.com"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
	pushInsteadOf = "https://gist.github.com/"
[include]
	path = config_local
