#!/usr/bin/env zsh

function print_status() {
    ink -l -c blue "$@"
}

function include_dot() {
  local dots_directory=$DOTFILES/plugins/apps/dots
  subdotfile="$1"
  ink -l -c blue "$2"
  source $dots_directory/$subdotfile.zsh
}


# Set OS X defaults
#is_osx && include_dot osx "Installing OSX Defaults..."

# Install homebrew packages
is_macos && include_dot homebrew "Installing Homebrew Packages..."

# Linix Packages, right now only ubuntu..
is_linux && include_dot ubuntu "Installing Ubuntu Packages..."

# Install python packages
include_dot python "Installing Python Packages..."

# Install node packages
include_dot node "Installing Node Packages..."

# Install ruby packages
include_dot ruby "Installing Ruby Packages..."

# Install vim packages
include_dot vim "Installing VIM Packages..."

# Vagrant plugins:
# vagrant-auto_network
# vagrant-cachier
# vagrant-hostsupdater
# vagrant-share
